<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="projects.tc2r.MYBBLESSONONE.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="350dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/tut1Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="Radio Buttons" />

            <Button
                android:id="@+id/tut2Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tut1Button"
                android:layout_below="@+id/tut1Button"
                android:text="List View" />

            <Button
                android:id="@+id/tut3Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tut2Button"
                android:layout_centerHorizontal="true"
                android:text="Wallpaper App" />

            <Button
                android:id="@+id/tut4Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tut3Button"
                android:layout_centerHorizontal="true"
                android:text="Graphics via View" />

            <Button
                android:id="@+id/tut5Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tut4Button"
                android:layout_centerHorizontal="true"
                android:text="Graphics Via SurfaceView" />

            <Button
                android:id="@+id/tut6Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tut5Button"
                android:layout_centerHorizontal="true"
                android:text="Videos N Mediawoes" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>